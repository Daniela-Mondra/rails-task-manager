<div class="container">
  <h1>My Tasks</h1>
  <ul id="task-list" class="p-0">
    <% @tasks.each do |task| %>
      <li id="task-<%= task.id %>" class="list-group-item">
        <input class="form-check-input me-1" type="checkbox" <%= 'checked' if task.completed %> id="task-<%= task.id %>" data-url="<%=  %>" />
        <%= link_to task.title, task_path(task), class: 'no-underline' %>
        <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_task_path, class: 'no-underline' %>
</div>
