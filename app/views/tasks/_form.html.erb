<div class="container m-3" style="width: 500px;">
  <%= form_with model: task, html: { class: 'd-flex flex-column' } do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: 'form-label' %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: 'form-label' %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>
    <%= f.submit 'Submit', class: 'btn btn-primary', style: 'width: 100px'%>
  <% end %>
</div>
